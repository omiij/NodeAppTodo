{
   "compilerOptions": {
     "lib": [
       "es5",
       "es6"
     ],
     "target": "es5",
     "module": "commonjs",
     "moduleResolution": "node",
     "outDir": "./build",
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "sourceMap": true,
     "strict": true,
     "skipLibCheck": true,
     "esModuleInterop": true
   },
   "include": ["src/**/*.ts"],
   "exclude": ["node_modules"],
   "migrations": ["src/migrations/**/*{.js,.ts}"],
   "cli": {
    "migrationsDir": "src/migration"
  }
 }
 